=bootstrap_form_for [@client, @mkb] do |f|
  %fieldset
    %legend 
      Основные данные
  =f.date_select :actual_date,:label => "Дата"
  =f.date_select :out_date,:label => "Дата открепления"
  =f.text_field :mkb, :label => "Заболевание"
  =f.collection_select :user_id, User.order(:surname),:id,:short_fio_with_doctor_type, :label => "Врач"
  %fieldset
    %legend 
      Диспансерная группа
    =f.radio_button :disp_group,Mkb::NO_DISP_GROUP,:label => "Группа не присвоена",:checked => true 
    =f.radio_button :disp_group,Mkb::DISP_GROUP_1,:label => "1" 
    =f.radio_button :disp_group,Mkb::DISP_GROUP_2,:label => "2"
    =f.radio_button :disp_group,Mkb::DISP_GROUP_3,:label => "3"
    =f.radio_button :disp_group,Mkb::DISP_GROUP_4,:label => "4"
    =f.radio_button :disp_group,Mkb::DISP_GROUP_5,:label => "5"
  .form-actions
    =f.submit "Сохранить",:class => "btn primary"
